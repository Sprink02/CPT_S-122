#pragma once
#ifndef FUNC_H
#define FUNC_H

#define _CRT_SECURE_NO_WARNINGS

#include <stdio.h>
#include <math.h>
#include <stdlib.h>
#include <time.h>
#include <string.h>
#include <ctype.h>
#include <windows.h>

typedef struct
{
	int seconds;
	int minutes;
}DURATION;

typedef struct
{
	char artist[50];
	char album[50];
	char song[50];
	char genre[50];
	DURATION songLength;
	int numPlayed;
	int rating;
}RECORD;

typedef struct node
{
	RECORD record;
	struct node* prevNode;
	struct node* nextNode;
}NODE;

void load(NODE** pList, FILE* input);
void store(NODE* pList, FILE* output);
void display();
//void insert();
//void delete();
void edit();
//void sort();
//void rate();
void play();
//void shuffle();
void exit(NODE* pList, FILE* output);


DURATION strtodur(char cell[50]);
int add_node_front(NODE** pList, RECORD newSong);
NODE* create_node(RECORD newSong);
int menu();

#endif // FUNC_H